            font-size: 14px;
        }

        .footer {
            display: flex;
            justify-content: space-around;
            padding: 10px 0;
            background-color: #1f2c34;
            border-top: 1px solid #3b4a54;
            position: fixed;
            bottom: 0;
            width: 100%;
            max-width: 600px;
            left: 50%;
            transform: translateX(-50%);
        }

        .footer-icon {
            font-size: 24px;
            cursor: pointer;
            color: #a6a6a6;
        }

        .footer-icon.active {
            color: #00af9c;
        }

        .add-chat {
            position: fixed;
            bottom: 80px;
            right: 20px;
            width: 56px;
            height: 56px;
            background-color: #25d366;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }

        .add-chat-icon {
