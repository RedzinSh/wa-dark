</head>
<body>
    <div class="container">
        <div class="header">
            <div class="header-title mdi mdi-whatsapp">ğ‘Šğ´ ğ·ğ´ğ‘…ğ¾</div>
        </div>
        <div class="chat-list" id="chatList">
            <!-- As conversas serÃ£o inseridas aqui dinamicamente -->
        </div>
    </div>

    <div class="footer">
        <span class="footer-icon active mdi mdi-message-text" onclick="goToHome()"></span>
        <span class="footer-icon mdi mdi-phone-outline" onclick="goToCall()"></span>
        <span class="footer-icon mdi mdi-circle-outline" onclick="goToStatus()"></span>
        <span class="footer-icon mdi mdi-cog" onclick="goToSettings()"></span>
    </div>

    <div class="add-chat" onclick="showAddChat()">
        <div class="add-chat-icon material-icons">add</div>
    </div>

    <script>
        const userCode = localStorage.getItem('userCode') || 'defaultCode';
        let chats = JSON.parse(localStorage.getItem(`chats_${userCode}`)) || [];

        function saveChats() {
            localStorage.setItem(`chats_${userCode}`, JSON.stringify(chats));
        }

        async function loadChats() {
            try {
                const response = await fetch('/api/getAllUsers');
                const users = await response.json();

                if (users.success) {
                    users.data.forEach(user => {
                        const chat = chats.find(chat => chat.code === user.userCode);
                        if (chat) {
                            chat.img = user.foto;
                        }
                    });
                    saveChats();
                }
            } catch (error) {
                console.error("Erro ao carregar os usuÃ¡rios:", error);
            }

            const chatList = document.getElementById('chatList');
            chatList.innerHTML = '';

            chats.forEach(chat => {
                const chatItem = document.createElement('div');
                chatItem.className = 'chat-item';
                chatItem.onclick = () => goToChat(chat.code);

                chatItem.innerHTML = `
                    <img id="img_${chat.code}" src="${chat.img}" alt="${chat.name}">
                    <div class="chat-item-info">
                        <div class="name">${chat.name}</div>
                        <div class="message">${chat.message}</div>
                    </div>
                    <div class="time" style="color: SpringGreen;">Em andamento...</div>
                `;

                chatList.appendChild(chatItem);
            });
        }

        function goToSettings() {
            window.location.href = "/perfil";
        }

        function goToChat(chatCode) {
            window.location.href = `/chat?code=${chatCode}`;
        }
        
        function goToStatus() {
            window.location.href = `/status`;
        }
        
        function goToHome() {
            window.location.href = "/home";
        }
        
        function goToCall() {
            window.location.href = "/call";
        }

        function showAddChat() {
            const newChatCode = prompt("Digite o cÃ³digo do usuÃ¡rio para adicionar:");
            if (newChatCode) {
                addChat(newChatCode);
            }
        }

        async function addChat(code) {
            const chatName = prompt("Digite o nome para este contato:");
            if (!chatName) {
                alert("Nome do contato Ã© obrigatÃ³rio.");
                return;
            }

            try {
                const response = await fetch(`/api/getUserByCode/${code}`);
                const userData = await response.json();

                if (!userData.success) {
                    alert("UsuÃ¡rio nÃ£o encontrado.");
                    return;
                }

                const { foto } = userData;

                const existingChat = chats.find(chat => chat.code === code);
                if (!existingChat) {
                    chats.push({
                        code: code,
                        name: chatName,
                        img: foto,
                        message: "OlÃ¡ ğŸ‘‹! Eu estou no ğ‘Šğ´ ğ·ğ´ğ‘…ğ¾ğŸ˜Œ"
                    });
                    saveChats();
                    loadChats();
                } else {
                    alert("VocÃª jÃ¡ adicionou este usuÃ¡rio.");
                }
            } catch (error) {
                console.error("Erro ao adicionar chat:", error);
                alert("Ocorreu um erro ao adicionar o chat.");
            }
        }

        function updateContactPhoto(code, newPhoto) {
            const chat = chats.find(chat => chat.code === code);
            if (chat) {
                chat.img = newPhoto;
                saveChats();
                document.getElementById(`img_${code}`).src = newPhoto;
            }
        }

        loadChats();

        // Atualiza a foto do usuÃ¡rio quando a pÃ¡gina Ã© carregada
        window.addEventListener('load', () => {
            fetch('/api/getAllUsers')
                .then(response => response.json())
                .then(users => {
                    if (users.success) {
                        users.data.forEach(user => {
                            updateContactPhoto(user.userCode, user.foto);
                        });
                    }
                })
                .catch(error => console.error('Erro ao carregar fotos:', error));
        });
    </script>

</body>
